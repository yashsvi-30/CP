𝐋𝐨𝐧𝐠𝐞𝐬𝐭 𝐂𝐨𝐧𝐬𝐞𝐜𝐮𝐭𝐢𝐯𝐞 𝐒𝐮𝐛𝐬𝐞𝐪𝐮𝐞𝐧𝐜𝐞:
int longestConsecutive(vector<int>& a){
    if(a.empty()) return 0;
    sort(a.begin(),a.end());
    int max_len=1;
    int count=1;
    int n= a.size();
    for(int i=0;<i<n;i++){
      if(a[i]==a[i+1]) continue;
      else if(a[i]+1==a[i+1]) count++;max_len=max(max_len,count);
      else count=1;
    }
    return max_len;
}
